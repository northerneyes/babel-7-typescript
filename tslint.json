{
  "extends": [
    "tslint-config-standard",
    "tslint-config-prettier",
    "tslint-react",
    "typestrict"
  ],
  "rules": {
    "no-any": true,
    "jsx-no-multiline-js": false,
    "no-namespace": true,
    "no-unused-variable": false,
    "deprecation": {
      "severity": "warning"
    },
    "no-invalid-this": {
      "severity": "warning"
    }
  },
  "linterOptions": {
    "exclude": ["dist/*.js", "@types", "**/node_modules/*", "**/*.js"]
  }
}
